<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/Bt_detail"
                android:background="@drawable/notes"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ดูข้อมูล"/>
            <Button
                android:id="@+id/Bt_edit"
                android:layout_marginTop="20dp"
                android:background="@drawable/settings"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:text="ดูข้อมูล"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/Bt_delite"
                android:background="@drawable/favourites2"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ดูข้อมูล"/>
            <Button
                android:id="@+id/Bt_review"
                android:layout_marginTop="20dp"
                android:background="@drawable/trash"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ดูข้อมูล"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Bt_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:background="@android:drawable/ic_delete"
        />
</RelativeLayout>
